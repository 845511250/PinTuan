<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/color_backGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="11dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_radius5_white">
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginLeft="11dp"
            android:src="@mipmap/icon_accoount_default"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="13dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张滨华"/>
            <TextView
                android:id="@+id/tv_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总提成 ￥1000"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额"/>
            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥590.00"
                android:textColor="@color/color_appRed"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@mipmap/icon_arrow_grey_right"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="11sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

